<!-- views/index.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Users List</title>
    <!-- Tailwind CSS CDN -->
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mx-auto p-4">
        <h1 class="text-2xl font-bold mb-4">Users List</h1>
        <div class="grid grid-cols-1 gap-4">
            <% users.forEach(user => { %>
                <div class="flex items-center p-4 bg-gray-100 border border-gray-200 rounded">
                    <img src="https://via.placeholder.com/100" alt="<%= user.first_name %>" class="w-24 h-24 rounded-full mr-4">
                    <div>
                        <p><strong>ID:</strong> <%= user.id %></p>
                        <p><strong>Name:</strong> <%= user.first_name %> <%= user.last_name %></p>
                        <p><strong>Email:</strong> <%= user.email %></p>
                        <p><strong>Gender:</strong> <%= user.gender %></p>
                        <p><strong>IP Address:</strong> <%= user.ip_address %></p>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
</body>
</html>
